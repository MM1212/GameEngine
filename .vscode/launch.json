{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Engine",
      "type": "cppdbg",
      "request": "launch",
      "stopAtEntry": false,
      "linux": {
        "cwd": "${workspaceFolder}/bin/Debug-linux-x86_64",
        "program": "${workspaceFolder}/bin/Debug-linux-x86_64/Editor/Editor",
        "externalConsole": false
      },
      "windows": {
        "cwd": "${workspaceFolder}/bin/Debug-windows-x86_64",
        "program": "${workspaceFolder}/bin/Debug-windows-x86_64/Editor/Editor.exe",
        "type": "cppvsdbg",
        "console": "externalTerminal"
      },
      "preLaunchTask": "Build Editor (Debug)",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "new"
      },
      "args": []
    }
  ]
}
