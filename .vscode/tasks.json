{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rebuild Solution",
      "command": "premake5",
      "type": "shell",
      "windows": {
        "args": ["vs2022"]
      },
      "linux": {
        "args": ["gmake2"]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build (Debug)",
      "dependsOn": "Rebuild Solution",
      "windows": {
        "command": "msbuild",
        "args": [
          "/property:Configuration=Debug",
          "/verbosity:minimal",
          "/nologo",
          "/m"
        ],
        "problemMatcher": "$msCompile"
      },
      "linux": {
        "command": "make",
        "args": [
          "config=debug",
          "-j16"
        ],
        "problemMatcher": ["$gcc"]
      },
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build (Release)",
      "dependsOn": "Rebuild Solution",
      "windows": {
        "command": "msbuild",
        "args": [
          "/property:Configuration=Release",
          "/verbosity:minimal",
          "/nologo",
          "/m"
        ],
        "problemMatcher": "$msCompile"
      },
      "linux": {
        "command": "make",
        "args": [
          "config=release",
          "-j16"
        ],
        "problemMatcher": ["$gcc"]
      },
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Clean",
      "windows": {
        "command": "msbuild",
        "args": [
          "/target:Clean",
          "/verbosity:minimal",
          "/nologo",
          "/m"
        ],
        "problemMatcher": "$msCompile"
      },
      "linux": {
        "command": "make",
        "args": [
          "clean"
        ],
        "problemMatcher": ["$gcc"]
      },
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Editor (Debug)",
      "dependsOn": "Rebuild Solution",
      "windows": {
        "command": "msbuild",
        "args": [
          "Editor/Editor.vcxproj",
          "/p:Configuration=Debug",
          "/p:Platform=x64",
          "/verbosity:minimal",
          "/nologo",
          "/m"
        ],
        "problemMatcher": "$msCompile"
      },
      "linux": {
        "command": "make",
        "args": [
          "config=debug",
          "-j16",
          "Editor"
        ],
        "problemMatcher": ["$gcc"]
      },
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}